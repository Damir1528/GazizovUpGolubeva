<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:GazizovUP1.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GazizovUP1.OkmoOrg"
			 x:DataType="vm:OknoOrgViewModel">

	<Grid Margin="0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<!-- Левая колонка для профиля -->
			<ColumnDefinition Width="*"/>
			<!-- Правая колонка для кнопок -->
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Column="0" HorizontalAlignment="Left" Margin="0">
			<StackPanel Width="500" Margin="40,0,0,0">
				<Image Source="{Binding ImageOrg}" Height="400"/>
			</StackPanel>
			<Button Content="Мой профиль" Margin="150,10,0,0" Padding="55,40,5,0" FontSize="14"
					Background="#E6E6FA" BorderBrush="#9370DB" BorderThickness="2" Width="200"
					Height="100" HorizontalAlignment="Left" Command="{Binding ToPageProfile}"/>
			<Button Content="Регистрация жюри/модер" Margin="150,10,0,0" Padding="10,40,5,0" FontSize="14"
					Background="#E6E6FA" BorderBrush="#9370DB" BorderThickness="2" Width="200"
					Height="100" HorizontalAlignment="Left" Command="{Binding ToPageRegr}"/>
		</StackPanel>

		<StackPanel Grid.Column="1" HorizontalAlignment="Center">
			<TextBlock Text="Окно Организатора" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
			<TextBlock x:Name="Day" FontSize="18" HorizontalAlignment="Center" Margin="10,20,0,10"/>

			<Button Content="Мероприятия" Margin="0,10,0,10" Padding="110,40,5,0" FontSize="14"
        Background="#E6E6FA" BorderBrush="#9370DB" BorderThickness="2" Width="300"
        Height="100" HorizontalAlignment="Center" Command="{Binding ToPage}"/>
			<Button Content="Участники" Margin="0,10,0,10" Padding="110,40,5,0" FontSize="14"
					Background="#E6E6FA" BorderBrush="#9370DB" BorderThickness="2" Width="300"
					Height="100" HorizontalAlignment="Center" Command="{Binding ToPageUser}"/>
			<Button Content="Жюри" Margin="0,10,0,10" Padding="125,40,5,0" FontSize="14"
					Background="#E6E6FA" BorderBrush="#9370DB" BorderThickness="2" Width="300"
					Height="100" HorizontalAlignment="Center" Command="{Binding ToPageJury}"/>
			<Button Content="Модераторы" Margin="0,10,0,10" Padding="125,40,5,0" FontSize="14"
					Background="#E6E6FA" BorderBrush="#9370DB" BorderThickness="2" Width="300"
					Height="100" HorizontalAlignment="Center" Command="{Binding ToPageModerator}"/>

		</StackPanel>
	</Grid>

</UserControl>
